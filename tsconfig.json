{
  "compilerOptions": {
    "target": "es6",
    "module": "ESnext",
    "outDir": "dist/js",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./src/**/*"],
  "exclude": ["src/types/*.ts", "node_modules", ".vscode"]
}
